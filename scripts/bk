#!/bin/bash

set -o pipefail
set -o errexit
set -o nounset
set -o noglob

CMD=("rsync"
     # "--preallocate"
     # "--sparse"
     # "--delete-after"
     # "--safe-links"
     # "--munge-links"
     # "--xattrs"
     # "--acls"
     # "--one-file-system"
     # "--hard-links"
     # "-zz"
     "--human-readable"
     "--progress"
     "--verbose"
     "--archive"
     "--skip-compress=zst/jpg/mp[34]/7z/bz2/webm/avi"
     "--delete"
     "--delete-excluded"
     "--exclude=*/target"
     "--exclude=*/__pycache__"
     '--exclude=emacs/elpa/*'
     '--exclude=node_modules/*'
     "$@")

echo "Rsync command:" "${CMD[@]}"
printf "\n\n"

cmd () {
    printf ">>> %s --> %s\n" "$1" "$2"
    "${CMD[@]}" "$1" "$2"
    printf "\n\n"
}

HOME=/home/fred
DATA=/run/media/fred/Data
EXTERNAL=/run/media/fred/External

if [ -d $DATA ]; then
    cmd "$HOME/Archive/"                  "$DATA/Fred/Archive/"
    cmd "$HOME/Music/"                    "$DATA/Fred/Music/"
    cmd "$HOME/Music.New/"                "$DATA/Fred/Music.New/"

    cmd "$HOME/Documents/"                "$DATA/Fred/Documents/"
    cmd "$HOME/Downloads/"                "$DATA/Fred/Downloads/"
    cmd "$HOME/Phone/"                    "$DATA/Fred/Phone/"
    cmd "$HOME/Videos/"                   "$DATA/Fred/Videos/"
    cmd "$HOME/Workspace/"                "$DATA/Fred/Workspace/"
    cmd "$HOME/.gnupg/"                   "$DATA/Fred/Configs/gnupg/"
    cmd "$HOME/.ssh/"                     "$DATA/Fred/Configs/ssh/"
    cmd "$HOME/.config/beets/"            "$DATA/Fred/Configs/config-beets/"
    cmd "$HOME/.config/hexchat/"          "$DATA/Fred/Configs/config-hexchat/"
    cmd "$HOME/.config/MusicBrainz/"      "$DATA/Fred/Configs/config-MusicBrainz/"
    cmd "$HOME/.config/transmission/"     "$DATA/Fred/Configs/config-transmission/"
    cmd "$HOME/.config/youtube-dl/"       "$DATA/Fred/Configs/config-youtube-dl/"
    cmd "$HOME/.local/share/keyrings"     "$DATA/Fred/Configs/local-share-keyrings/"
    cmd "$HOME/.face"                     "$DATA/Fred/Configs/face.jpg"
    cmd "$HOME/.wallpaper.jpg"            "$DATA/Fred/Configs/wallpaper.jpg"

    if [ -d $EXTERNAL ]; then
        cmd "$DATA/Common/" "$EXTERNAL/Common/"
        cmd "$DATA/Fred/"   "$EXTERNAL/Fred/"
        cmd "$DATA/Media/"  "$EXTERNAL/Media/"
    else
        printf ">>> %s is not mounted\n" $EXTERNAL
        exit 0
    fi
else
    printf ">>> %s is not mounted\n" $DATA
    exit 1
fi
