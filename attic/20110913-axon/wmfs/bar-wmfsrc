[bar]
        bg     = "#000000"
        fg     = "#FFFFFF"
        border = true
        #height = "-1"

        light_shade =  0.0
        dark_shade  = -0.0

        # Order of infobar elements:
        # t = Tag list
        # l = Layout button
        # s = Selbar
        elements_order = "lts"

        [systray]
                # Enable/disable systray
                active = true
                # Screen of systray
                screen = 0
                # Spacing between tray icons
                spacing = 0
        [/systray]

        # Remove this section to disable the selbar.
        [selbar]
                bg = "#333333"
                fg = "#FFFFFF"

                # Cut title length
                max_length = 25

                [mouse] button = "3" func = "clientlist"  [/mouse]
                [mouse] button = "4" func = "client_next" [/mouse]
                [mouse] button = "5" func = "client_prev" [/mouse]
        [/selbar]

[/bar]
