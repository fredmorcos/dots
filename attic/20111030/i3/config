# exec i3status -c ~/.i3/status | i3bar -dtop -f "-*-liberation mono-medium-r-normal-*-12-*-96-96-*-*-*-*" --color-active-ws-bg "#285577" --color-inactive-ws-bg "#222222" --color-urgent-ws-bg "#2877AA" --color-focus-ws-bg "#287788"
