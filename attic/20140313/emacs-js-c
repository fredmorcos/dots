(require 'package)
(add-to-list
 'package-archives
 '("melpa" . "http://melpa.milkbox.net/packages/")
 '("marmalade" . "http://marmalade-repo.org/packages/"))
(package-initialize)

(require 'haskell-mode)
(require 'flycheck)

(add-hook 'after-init-hook 'global-company-mode)

(custom-set-variables
 '(blink-cursor-mode nil)
 '(c-backslash-column 79)
 '(c-backslash-max-column 79)
 '(c-basic-offset 2)
 '(c-block-comment-prefix "* ")
 '(c-label-minimum-indentation 1)
 '(column-number-mode t)
 '(company-ghc-show-info (quote oneline))
 '(company-ghc-show-module nil)
 '(company-idle-delay 0.1)
 '(company-minimum-prefix-length 3)
 '(flycheck-clang-language-standard "c11")
 '(flycheck-cppcheck-checks (quote ("style" "all")))
 '(flycheck-display-errors-delay 0.5)
 '(flycheck-idle-change-delay 0.5)
 '(font-use-system-font t)
 '(global-company-mode t)
 '(global-flycheck-mode t nil (flycheck))
 '(global-hl-line-mode t)
 '(global-linum-mode t)
 '(global-whitespace-mode t)
 '(global-whitespace-newline-mode nil)
 '(haskell-indent-offset 2)
 '(haskell-indentation-ifte-offset 0)
 '(haskell-mode-hook (quote (turn-on-haskell-indentation)))
 '(history-delete-duplicates t)
 '(history-length 20)
 '(indent-tabs-mode nil)
 '(inhibit-startup-screen t)
 '(initial-scratch-message nil)
 '(js3-allow-keywords-as-property-names nil)
 '(js3-auto-indent-p t)
 '(js3-enter-indents-newline t)
 '(js3-max-columns 79)
 '(js3-mirror-mode t)
 '(js3-strict-missing-semi-warning t)
 '(linum-format " %d ")
 '(menu-bar-mode nil)
 '(mode-require-final-newline (quote visit-save))
 '(recentf-mode t)
 '(recentf-save-file "~/.emacs.d/recentf")
 '(require-final-newline (quote visit-save))
 '(savehist-mode t)
 '(scroll-bar-mode nil)
 '(scroll-conservatively 101)
 '(show-trailing-whitespace t)
 '(tool-bar-mode nil)
 '(whitespace-action (quote (cleanup)))
 '(whitespace-style (quote (face tabs lines-tail trailing space-before-tab
                                 indentation empty space-after-tab))))

(defalias 'yes-or-no-p 'y-or-n-p)
(global-set-key [f5] 'blink-matching-open)

(provide '.emacs)
