export MPV_HOME="$HOME/.config/mpv"                      # MPV
export DVDCSS_CACHE="$XDG_DATA_HOME/dvdcss"              # DVD-CSS
export PARALLEL_HOME="$XDG_CONFIG_HOME/parallel"         # GNU Parallel
export SCREENRC="$XDG_CONFIG_HOME/screen/screenrc"       # GNU Screen
